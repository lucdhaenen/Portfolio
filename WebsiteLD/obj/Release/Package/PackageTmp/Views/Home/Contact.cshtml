@model WebsiteLD.Models.Contact

@{
    ViewBag.Title = "Contact";
}
<div id="container">
    <h4>Contact</h4>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>    
    
    @using(Html.BeginForm("Contact", "Home", FormMethod.Post))
	{
	    <div id="contact">
            
            <div class="rij">
                @Html.LabelFor(m => m.Voornaam, "Voornaam : ")
                @Html.EditorFor(m => m.Voornaam)
                @Html.ValidationMessageFor(m => m.Voornaam, "*")
                <br />
            </div>
           
            <div class="rij">
                @Html.LabelFor(m => m.Familienaam, "Familienaam : ")
                @Html.EditorFor(m => m.Familienaam)
                @Html.ValidationMessageFor(m => m.Familienaam, "*")
                <br />
            </div>
            
            <div class="rij">
                @Html.LabelFor(m => m.Email, "Email : ")
                @Html.EditorFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email, "*")
                <br />
            </div>
            
            <div class="rij">
                @Html.LabelFor(m => m.Onderwerp, "Onderwerp : ")
                @Html.EditorFor(m => m.Onderwerp)
                @Html.ValidationMessageFor(m => m.Onderwerp, "*")
                <br />
            </div>
            
            <div class="rij">
                @Html.LabelFor(m => m.Bericht, "Bericht : ")
                @Html.TextAreaFor(m => m.Bericht)
                @Html.ValidationMessageFor(m => m.Bericht, "*")
                <br />
            </div>
            @Html.ValidationSummary()
            <div class="rij">
                <input type="submit" value="Verzenden" class="knop" />
                <input type="reset" value="Velden leegmaken" class="knop" />
            </div>                               
        </div>
	}
</div>

